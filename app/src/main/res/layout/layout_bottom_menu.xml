<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:background="#bababa"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bottom_index"
        android:padding="8dp"
        android:background="@drawable/style_bottom_bg"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bottom_index_image"
            android:src="@mipmap/home2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/bottom_index_title"
            android:text="首页"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/textcolor"
            android:layout_below="@id/bottom_index_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_benefit"
        android:background="@drawable/style_bottom_bg"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@mipmap/benefit"
            android:id="@+id/bottom_benefit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/bottom_benefit_title"
            android:text="福利社"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/textcolor2"
            android:layout_below="@id/bottom_benefit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_quan"
        android:background="@drawable/style_bottom_bg"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@mipmap/quan"
            android:id="@+id/bottom_quan_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:id="@+id/bottom_quan_title"
            android:text="好券圈"
            android:textSize="12sp"
            android:textColor="@color/textcolor2"
            android:layout_below="@id/bottom_quan_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/style_bottom_bg"
        android:id="@+id/bottom_my"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@mipmap/my"
            android:id="@+id/bottom_my_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:id="@+id/bottom_my_title"
            android:text="个人中心"
            android:textSize="12sp"
            android:textColor="@color/textcolor2"
            android:layout_below="@id/bottom_my_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>