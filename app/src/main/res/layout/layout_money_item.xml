<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="申请兑换"
        android:textColor="#494949"
        android:textSize="16sp"
        android:id="@+id/money_item_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/money_item_label1"
        app:layout_constraintLeft_toLeftOf="@id/money_item_label1"
        android:id="@+id/money_item_time"
        android:layout_width="wrap_content"
        android:textColor="#808080"
        android:textSize="14sp"
        android:text="2018.05.30 12:00:00"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#af0810"
        android:textSize="16sp"
        android:text="-10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/money_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>